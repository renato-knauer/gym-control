{% extends "layout.njk" %}

{% block head %}
    <title>About - {{about.name}}</title>
{% endblock %}

{% block content %}

    <div id="page-container">
        <div id="wrapper" class="content-wrap">
            <img src="{{about.avatar_url}}" alt="Image of {{about.name}}">
            <h1>{{about.name}}</h1>
            <h2>{{about.role}}</h2>
            <p>{{about.description}}</p>
        </div>
        <footer id="links-footer" class="links">
            {% for link in about.links %}
                <a target="_blank" href="{{link.url}}">{{link.name}}</a>
            {% endfor %}
        </footer>
    </div>

{% endblock %}